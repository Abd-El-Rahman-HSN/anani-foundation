<%= simple_form_for(@expense, wrapper: :vertical_form) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="row">
      <div class="col-xs-6">
        <%= f.input :kind, label: "البند" %>
      </div>
      <div class="col-xs-6">
        <%= f.input :amount, label: "المبلغ" %>
      </div>
    </div>
    <%= f.input :date, label: "التاريخ", disabled: true, as: :string, input_html: {class: "expense_date", value:  @expense.new_record? ? Date.today : @expense.created_at.to_date} %>
    <%= f.input :workshop_id, label: "الورشة", collection: @workshops ,label_method: :name , value_method: :id %>
  </div>

  <div class="form-actions">
    <%= f.submit "حفظ", class: "btn btn-default btn-primary" %> 
    <%= link_to "رجوع", :back, class: "btn btn-default" %>
  </div>
<% end %>
