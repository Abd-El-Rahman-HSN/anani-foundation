<div class="page-header">
  <h1>بيانات السجاده</h1>

    <%= link_to(new_carpet_datum_path, class: "btn btn-success") do %>
      اضافه سجاده  <i class="icon-plus icon-white"></i>
    <% end %>
</div>

<table class="table table-striped table-bordered table-condensed">
<thead>
<tr>
  <th>العرض</th>
  <th>الطول</th>
  <th>عدد العقد</th>
  <th>الكود</th>
  <th>الاسم</th>
  <th>التصميم الرئيسى</th>
  <th>اسم الماده الخام</th>
  <th>الكميه</th>
  <th>عدد الصفوف</th>
  <th class="no-sort"></th>
</tr>
</thead>
<tfoot>
  <th>العرض</th>
  <th>الطول</th>
  <th>عدد العقد</th>
  <th>الكود</th>
  <th>الاسم</th>
  <th>التصميم الرئيسى</th>
  <th>اسم الماده الخام</th>
  <th>الكميه</th>
  <th>عدد الصفوف</th>
  <td></td>
</tfoot>
<tbody>
  <% unless @carpetdatas.empty? %>
    <% @carpetdatas.each do |carpetdata| %>
      <tr> 
        <td><%= carpetdata.width %></td>
        <td><%= carpetdata.lenght %></td>
        <td><%= carpetdata.knot %></td>
        <td><%= carpetdata.code %></td>
        <td><%= carpetdata.name %></td>
        <td><%= carpetdata.main_model %></td>        
        <td><%= carpetdata.raw_material_name%></td>        
        <td><%= carpetdata.raw_material_quantity%></td> 
        <td><%= carpetdata.number_of_rows %></td>        
        <td><%= link_to 'تعديل', edit_carpet_datum_path(carpetdata) %>
        <%= link_to 'مسح', carpet_datum_path(carpetdata),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  <% end %>

</tbody>
</table>
