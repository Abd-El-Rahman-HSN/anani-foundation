<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>كود الصنف</th>
      <th>الصنف</th>
      <th>الوصف</th>
      <th>الوحده</th>
      <th>حد الامان</th>
      <th>الفئه</th>
      <th>الكمية</th>
      <th>سعر الوحدة</th>

      <th class="no-sort"></th>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <th>كود الصنف</th>
      <th>الصنف</th>
      <th>الوصف</th>
      <th>الوحده</th>
      <th>حد الامان</th>
      <th>الفئه</th>
      <th>الكمية</th>
      <th>سعر الوحدة</th>
      <td></td>
    </tr>
  </tfoot>
  <tbody>
    <% unless @rawmaterials.empty? %>
      <% @rawmaterials.each do |rawmaterial| %>
        <tr>
          <td><%= rawmaterial.code %></td>
          <td><%= rawmaterial.item %></td>
          <td><%= rawmaterial.description %></td>
          <td><%= rawmaterial.uom.try(:text) %></td>
          <td><%= rawmaterial.safety_level %></td> 
          <td><%= rawmaterial.category %></td>        
          <td id="tr_<%= rawmaterial.id %>"><%= rawmaterial.quantity %></td> 
          <td></td>
          

          <td><%= link_to 'تعديل', edit_raw_material_warehouse_path(rawmaterial) %>
          <%= link_to 'مسح', raw_material_warehouse_path(rawmaterial),
                method: :delete,
                data: { confirm: 'Are you sure?' } %>

        </tr>
      <% end %>
    <% end %>      
  </tbody>
</table>