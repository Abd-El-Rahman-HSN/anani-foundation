<%= simple_form_for(@reduction, wrapper: :vertical_form) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :date, label: "التاريخ", disabled: true, as: :string, input_html: {class: "reduction_date", value:  @reduction.new_record? ? Date.today : @reduction.created_at.to_date} %>

    <%= f.input :workshop_id, label: "الورشة", collection: @workshops, label_method: :name , value_method: :id %>

    <%= f.input :worker_id, label: "الأسم", collection: @reduction.new_record? ? (@workshops_create || []) : @workers ,label_method: :name , value_method: :id %>

    <%= f.input :cost, label: "المبلغ" %>
  </div>

  <div class="form-actions">
    <%= f.submit "حفظ", class: "btn btn-default btn-primary" %> 
    <%= link_to "رجوع", :back, class: "btn btn-default" %>
  </div>
<% end %>
