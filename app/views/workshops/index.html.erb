 <div class="page-header">
    <h1>الورشه</h1>
    <%= link_to(new_workshop_path, class: "btn btn-success") do %>
      اضافه ورشه جديده<i class="icon-plus icon-white"></i>
    <% end %>
</div>

<table class="table table-striped table-bordered table-condensed">
<thead>
<tr>
  <th>اسم الورشه</th>
  <th>المنطقه</th>
  <th class="no-sort"></th>
</tr>
</thead>
<tfoot>
  <th>اسم الورشه</th>
  <th>المنطقه</th>
  <td></td>
</tfoot>
<tbody>
  <% unless @workshops.empty? %>
    <% @workshops.each do |workshop| %>
      <tr>
        <td><%= workshop.name %></td>
        <td><%= workshop.location.name %></td>        
        <td><%= link_to 'تعديل', edit_workshop_path(workshop) %>
        <%= link_to 'مسح', workshop_path(workshop),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  <% end %>

</tbody>
</table>
