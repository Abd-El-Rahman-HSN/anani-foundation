 <div class="job_order_raw_materials"></div>
        <%= simple_form_for(@invoice) do |f| %>
          <% if @invoice.errors.any? %>
            <div id="error_explanation">
              <h2>
               
              </h2>
              <ul>
                <% @invoice.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

                <div class="col-xs-12">
                  <%= f.input :invoice_serial,label: "رقم الفاتوره:"%>
                </div>

                  <%= f.label "التاريخ:", class: "col-xs-12 control-label" %>
                <div class="col-xs-12">
                  <%= f.text_field :date,label: "التاريخ:", class: "form-control" ,"data-provide"=>"datepicker"%>
                </div>

                <div class="form-group">
                  <div class="col-xs-12">
                    <%= f.input :customer,label: "العميل:", class: "form-control" %>
                  </div>
                  <div class="col-xs-12">
                    <%= f.input :phone,label: "رقم التليفون:", class: "form-control" %>
                  </div>
                </div>

                <h2>بيانات سجادة</h2>

          <table class='table'>
              <thead>
                <tr>
                  <th>السجادة</th>
                  <th>الطول</th>
                  <th>العرض</th>
                  <th>المساحة</th>
                  <th>الخامة</th>
                  <th>سعر المتر</th>
                  <th>اجمالي السجادة</th>
                </tr>
              </thead>
              <tbody class='tasks'>
                <%= f.simple_fields_for :tasks do |task| %>
                  <%= render 'task_fields', :f => task %>
                <% end %>
              </tbody>
            </table>

            <div class='links'>
              <%= link_to_add_association 'اضافة سجادة', f, :tasks ,class: "btn btn-success" %>
            </div>
            <div class="form-group">
              <div class="col-xs-12">
                <%= f.input :discount,label: "الخصم:", class: "form-control",min:0 %>
              </div>
            </div>
            <div class="form-actions">
              <%= f.submit "حفظ" , class: "btn btn-default btn-primary btn-lg" %> 
            </div>


    <% end %>