<div class="page-header">
    <h1>الدورات الأنتاجية</h1>

    <%= link_to(new_production_phase_path, class: "btn btn-success") do %>
      اضافه دورة أنتاجية <i class="icon-plus icon-white"></i>
    <% end %>
</div>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>الرقم</th>
      <th>الخامة الرئيسية</th>
      <th>الحرف</th>
      <th class="no-sort"></th>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <th>الرقم</th>
      <th>الخامة الرئيسية</th>
      <th>الحرف</th>
      <td></td>
    </tr>
  </tfoot>
  <tbody>
    <% @production_phases.each do |production_phase| %>
      <tr>
        <td><%= production_phase.phase_no %></td>
        <td><%= production_phase.main_material %></td>
        <td><%= production_phase.initial_letter %></td>
        <td><%= link_to 'تعديل', edit_production_phase_path(production_phase) %> <%= link_to 'حذف', production_phase, method: :delete, data: { confirm: 'هل أنت متأكد?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>